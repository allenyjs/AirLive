
@{
    Layout = null;
}

<div class="title2">
   地區選擇
</div>
<div id="Menus" class="menus">
    <div class="menuitem menucountys">
        <span>
            縣市: 
        </span>
        <span class="selectbox conuntyselect">
            <select ng-model="selectedCounty" ng-options="county for county in Countys" ng-change="initSides()"></select>
        </span>
    </div>

    <div class="menuitem menusides">
        <span>
            站點: 
        </span>
        <span class="selectbox sideselect">
            <select ng-model="selectedSide" ng-options="side for side in Sides" ng-change="initAQI()">
                <option>請選擇...</option>
            </select>
        </span>
    </div>
    
</div>
<div class="subjectpanel">
    <div class="subject">
        <span>AQI: </span>
        <span class="subjectval">{{AQI.AQI}}</span>
    </div>
    <div class="levelbar levelaqi">
        <div class="Indicators" ng-style="IndicatorsAqiObj">
            <div class="airval">{{currentAQIText}}</div>
            <div class="Indicators-arrow">|</div>
        </div>
        <level-bar-aqi levelbar-indexval="{{ levelbar.indexval }}"
                       levelbar-rangetext="{{ levelbar.rangetext }}"
                       ng-repeat="levelbar in aqiranges">
        </level-bar-aqi>
    </div>
    <br>
</div>

<div class="subjectpanel">
    <div class="subject">
        <span> PM2.5: </span>
        <span class="subjectval">{{AQI._PM2point5}}</span>
    </div>
    <div class="levelbar levelpm25">
        <div class="Indicators" ng-style="IndicatorsPM25Obj">
            <div class="airval">{{currentPM25Text}}</div>
            <div class="Indicators-arrow">|</div>
        </div>
        <level-bar-pm25 levelbar-indexval="{{ levelbar.indexval }}"
                        levelbar-rangetext="{{ levelbar.rangetext }}"
                        ng-repeat="levelbar in pm25ranges">
        </level-bar-pm25>
    </div>
    <br>
</div>

